@model ShelfViewModel

@{ 
    if (Model.Shelf.Number == null)
    {
        ViewBag.Title = $"Добавление новой полки";
    }
    else
    {
        ViewBag.Title = $"Редактирование полки \"{Model.Shelf.Number}\"";
    }
}

<div class="container-fluid mb-3 mt-3">
    <form asp-area="Admin" asp-controller="Shelf" asp-action="Edit" method="post">
        <input type="hidden" asp-for=@Model.Shelf.Id />
        <div class="form-group row">
            <label asp-for=@Model.Shelf.Number class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div>
                    <span asp-validation-for=@Model.Shelf.Number class="text-danger"></span>
                </div>
                <input asp-for=@Model.Shelf.Number class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for=@Model.Shelf.RackId class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div>
                    <span asp-validation-for=@Model.Shelf.RackId class="text-danger"></span>
                </div>
                <select asp-for=@Model.Shelf.RackId class="form-control">
                    @foreach (var element in Model.Racks)
                    {
                        <option value=@element.Id  selected=@(element.Id == (Model.Shelf?.RackId ?? 0))>
                            @element.Number (@element.Library.Name) 
                        </option>
                    }
                </select>
            </div>
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Сохранить изменения</button>
            <a asp-area="Admin" asp-controller="Shelf" asp-action="Index">Отмена</a>
        </div>
    </form>
</div>
