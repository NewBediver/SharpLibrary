@model Library

<div class="col-md-4 row pt-1 pb-1 mr-0 ml-0">
    <div class="card bg-light w-100">
        <div class="card-header">ID: @Model.Id</div>
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">@Model.Description</p>
            <p class="card-text">
                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Литература
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        @foreach (var rack in Model.Racks)
                        {
                            @foreach (var shelf in rack.Shelves)
                            {
                                @foreach (var literature in shelf.Literatures)
                                {
                                    <a class="dropdown-item" href="#">@literature.Name</a>
                                }
                            }
                        }
                    </div>
                </div>
            </p>
            <p class="card-text">
                <ul class="nav">
                    <li class="dropdown">
                        <a class="btn btn-outline-secondary dropdown-toggle" href="#" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Стеллажи
                        </a>
                        @foreach (var rack in Model.Racks)
                        {
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <li class="dropdown-submenu">
                                    <a class="dropdown-item dropdown-toggle" href="#">@rack.Number</a>
                                    <ul class="dropdown-menu">
                                        @foreach (var shelf in rack.Shelves)
                                        {
                                            <li class="dropdown-submenu">
                                                <a class="dropdown-item dropdown-toggle" href="#">@shelf.Number</a>
                                                <ul class="dropdown-menu">
                                                    @foreach (var literature in shelf.Literatures)
                                                    {
                                                        <li><a class="dropdown-item" href="#">@literature.Name</a></li>
                                                    }
                                                </ul>
                                            </li>
                                        }
                                    </ul>
                                </li>
                            </ul>
                        }
                    </li>
                </ul>
            </p>
        </div>
        <div class="card-footer bg-transparent">
            <form asp-area="Admin" asp-controller="Library" asp-action="Delete" method="post">
                <a asp-area="Admin" asp-controller="Library" asp-action="Edit" class="btn btn-sm btn-warning" asp-route-libraryId=@Model.Id>Редактировать</a>
                <input type="hidden" name="LibraryId" value=@Model.Id />
                <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
            </form>
        </div>
    </div>
</div>
