@model Shelf

<div class="col-md-4 row pt-1 pb-1 mr-0 ml-0">
    <div class="card bg-light w-100">
        <div class="card-header">ID: @Model.Id</div>
        <div class="card-body">
            <h5 class="card-title">@Model.Number</h5>
            <p class="card-text">Стеллаж: @Model.Rack.Number</p>
            <p class="card-text">Библиотека: @Model.Rack.Library.Name</p>
        </div>
        <div class="card-footer bg-transparent">
            <form asp-area="Admin" asp-controller="Shelf" asp-action="Delete" method="post">
                <a asp-area="Admin" asp-controller="Shelf" asp-action="Edit" class="btn btn-sm btn-warning" asp-route-shelfId=@Model.Id>Редактировать</a>
                <input type="hidden" name="ShelfId" value=@Model.Id />
                <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
            </form>
        </div>
    </div>
</div>
