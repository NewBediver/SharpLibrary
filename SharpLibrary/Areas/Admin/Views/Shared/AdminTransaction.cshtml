@model Transaction

<div class="col-md-4 row pt-1 pb-1 mr-0 ml-0">
    <div class="card bg-light w-100">
        <div class="card-header">ID: @Model.Id</div>
        <div class="card-body">
            <p class="card-text">Дата создания: @Model.StartDate</p>
            <p class="card-text">Дата закрытия: @Model.EndDate</p>
            <p class="card-text">Описание: @Model.Description</p>
            <p class="card-text">Тип транзакции: @Model.Type.Name</p>
            <p class="card-text">Читательский абонемент: @Model.Subscription.Id (@Model.Subscription.User.Surname @Model.Subscription.User.Name @Model.Subscription.User.Patronymic)</p>
            <p class="card-text">
                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Литература
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        @foreach (var element in Model.TransactionLiteratures.Select(elm => elm.Literature))
                        {
                            <a class="dropdown-item" href="#">@element.Name</a>
                        }
                    </div>
                </div>
            </p>
        </div>
        <div class="card-footer bg-transparent">
            <form asp-area="Admin" asp-controller="Transaction" asp-action="Delete" method="post">
                <a asp-area="Admin" asp-controller="Transaction" asp-action="Edit" class="btn btn-sm btn-warning" asp-route-transactionId=@Model.Id>Редактировать</a>
                <input type="hidden" name="TransactionId" value=@Model.Id />
                <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
            </form>
        </div>
    </div>
</div>
