@model Genre

<div class="col-md-4 row pt-1 pb-1 mr-0 ml-0">
    <div class="card bg-light w-100">
        <div class="card-header">ID: @Model.Id</div>
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">@Model.Description</p>
            <p class="card-text">
                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Литература
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        @foreach (var element in Model.GenreLiteratures)
                        {
                            <a class="dropdown-item" href="#">@element.Literature.Name</a>
                        }
                    </div>
                </div>
            </p>
        </div>
        <div class="card-footer bg-transparent">
            <form asp-area="Admin" asp-controller="Genre" asp-action="Delete" method="post">
                <a asp-area="Admin" asp-controller="Genre" asp-action="Edit" class="btn btn-sm btn-warning" asp-route-genreId=@Model.Id>Редактировать</a>
                <input type="hidden" name="GenreId" value=@Model.Id />
                <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
            </form>
        </div>
    </div>
</div>
