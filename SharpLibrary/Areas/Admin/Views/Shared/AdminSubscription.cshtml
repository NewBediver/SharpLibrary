@model Subscription

<div class="col-md-4 row pt-1 pb-1 mr-0 ml-0">
    <div class="card bg-light w-100">
        <div class="card-header">ID: @Model.Id</div>
        <div class="card-body">
            <p class="card-text">Дата получения: @Model.DateOfStart</p>
            <p class="card-text">Тип абонемента: @Model.Type.Name</p>
        </div>
        <div class="card-footer bg-transparent">
            <form asp-area="Admin" asp-controller="Subscription" asp-action="Delete" method="post">
                <a asp-area="Admin" asp-controller="Subscription" asp-action="Edit" class="btn btn-sm btn-warning" asp-route-subscriptionId=@Model.Id>Редактировать</a>
                <input type="hidden" name="SubscriptionId" value=@Model.Id />
                <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
            </form>
        </div>
    </div>
</div>
