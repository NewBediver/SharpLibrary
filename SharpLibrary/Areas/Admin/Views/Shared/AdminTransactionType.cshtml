@model TransactionType

<div class="col-md-4 row pt-1 pb-1 mr-0 ml-0">
    <div class="card bg-light w-100">
        <div class="card-header">ID: @Model.Id</div>
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">@Model.Description</p>
            <p class="card-text">
                <ul class="nav">
                    <li class="dropdown">
                        <a class="btn btn-outline-secondary dropdown-toggle" href="#" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Транзакции
                        </a>
                        <ul class="dropdown-menu">
                            @foreach (var transaction in Model.Transactions)
                            {
                                <li>
                                    <a class="dropdown-item" href="#">
                                        Идентификатор транзакции: @transaction.Id<br />
                                        Идентификатор абонемента: @transaction.SubscriptionId<br />
                                        Пользователь: @transaction.Subscription.User.Subscription @transaction.Subscription.User.Name @transaction.Subscription.User.Patronymic
                                    </a>
                                </li>
                            }
                        </ul>
                    </li>
                </ul>
            </p>
        </div>
        <div class="card-footer bg-transparent">
            <form asp-area="Admin" asp-controller="TransactionType" asp-action="Delete" method="post">
                <a asp-area="Admin" asp-controller="TransactionType" asp-action="Edit" class="btn btn-sm btn-warning" asp-route-typeId=@Model.Id>Редактировать</a>
                <input type="hidden" name="TypeId" value=@Model.Id />
                <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
            </form>
        </div>
    </div>
</div>
