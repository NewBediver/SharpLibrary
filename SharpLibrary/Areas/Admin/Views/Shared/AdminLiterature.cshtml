@model Literature

<div class="col-md-4 row pt-1 pb-1 mr-0 ml-0">
    <div class="card bg-light w-100">
        <div class="card-header">ID: @Model.Id</div>
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">Инвентарный номер: @Model.InventoryNumber</p>
            <p class="card-text">Дата написания: @Model.Date</p>
            <p class="card-text">Количество страниц: @Model.Pages</p>
            <p class="card-text">Краткое описание: @Model.ShortDescription</p>
            <p class="card-text">Длинное описание: @Model.LongDescription</p>
            <p class="card-text">Дата получения: @Model.ReceiptDate</p>
            <p class="card-text">Тип литературы: @Model.Type.Name</p>
            <p class="card-text">Статус литературы: @Model.Status.Name</p>
            <p class="card-text">Место хранения: @Model.Shelf.Number -> @Model.Shelf.Rack.Number -> @Model.Shelf.Rack.Library.Name</p>
            <p class="card-text">
                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Авторы
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        @foreach (var element in Model.AuthorLiteratures)
                        {
                            <a class="dropdown-item" asp-area="Admin" asp-controller="Author" asp-action="Edit" asp-route-authorId=@element.AuthorId>@element.Author.Surname @element.Author.Name @element.Author.Patronymic</a>
                        }
                    </div>
                </div>
            </p>
            <p class="card-text">
                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Жанры
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        @foreach (var element in Model.GenreLiteratures)
                        {
                            <a class="dropdown-item" asp-area="Admin" asp-controller="Genre" asp-action="Edit" asp-route-genreId=@element.GenreId>@element.Genre.Name</a>
                        }
                    </div>
                </div>
            </p>
            <p class="card-text">
                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Издательства
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        @foreach (var element in Model.PublishingLiteratures)
                        {
                            <a class="dropdown-item" asp-area="Admin" asp-controller="Publishing" asp-action="Edit" asp-route-publishingId=@element.PublishingId>@element.Publishing.Name</a>
                        }
                    </div>
                </div>
            </p>
        </div>
        <div class="card-footer bg-transparent">
            <form asp-area="Admin" asp-controller="Literature" asp-action="Delete" method="post">
                <a asp-area="Admin" asp-controller="Literature" asp-action="Edit" class="btn btn-sm btn-warning" asp-route-literatureId=@Model.Id>Редактировать</a>
                <input type="hidden" name="LiteratureId" value=@Model.Id />
                <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
            </form>
        </div>
    </div>
</div>
