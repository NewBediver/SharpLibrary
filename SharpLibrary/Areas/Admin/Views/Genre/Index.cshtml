@model IEnumerable<Genre>

@{ 
    ViewBag.Title = "Все жанры";
}

<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-center">ID</th>
        <th class="text-center">Название</th>
        <th class="text-center">Описание</th>
        <th class="text-center">Действия</th>
    </tr>
    @foreach (var element in Model)
    {
        <tr>
            <td class="text-center">@element.Id</td>
            <td class="text-center">@element.Name</td>
            <td>@element.Description</td>
            <td class="text-center">
                <form asp-area="Admin" asp-controller="Genre" asp-action="Delete" method="post">
                    <a asp-area="Admin" asp-controller="Genre" asp-action="Edit" class="btn btn-sm btn-warning" asp-route-genreId=@element.Id>Редактировать</a>
                    <input type="hidden" name="GenreId" value=@element.Id />
                    <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                </form>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-area="Admin" asp-controller="Genre"asp-action="Create" class="btn btn-sm btn-primary">Добавить жанр</a>
</div>