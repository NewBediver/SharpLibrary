@model UserViewModel

@{ 
    if (Model.User.Id == 0)
    {
        ViewBag.Title = $"Добавление нового пользователя";
    }
    else
    {
        ViewBag.Title = $"Редактирование пользователя \"{Model.User.Surname} {Model.User.Name} {Model.User.Patronymic}\"";
    }
}

<div class="container-fluid mb-3 mt-3">
    <form asp-area="Admin" asp-controller="User" asp-action="Edit" method="post">
        <input type="hidden" asp-for=@Model.User.Id />
        <div class="form-group row">
            <label asp-for=@Model.User.Surname class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div>
                    <span asp-validation-for=@Model.User.Surname class="text-danger"></span>
                </div>
                <input asp-for=@Model.User.Surname class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for=@Model.User.Name class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div>
                    <span asp-validation-for=@Model.User.Name class="text-danger"></span>
                </div>
                <input asp-for=@Model.User.Name class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for=@Model.User.Patronymic class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div>
                    <span asp-validation-for=@Model.User.Patronymic class="text-danger"></span>
                </div>
                <input asp-for=@Model.User.Patronymic class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for=@Model.User.DateOfBirth class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div>
                    <span asp-validation-for=@Model.User.DateOfBirth class="text-danger"></span>
                </div>
                <input asp-for=@Model.User.DateOfBirth class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for=@Model.User.RoleId class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div>
                    <span asp-validation-for=@Model.User.RoleId class="text-danger"></span>
                </div>
                <select asp-for=@Model.User.RoleId class="form-control">
                    @foreach (var element in Model.Roles)
                    {
                        <option value=@element.Id selected=@(element.Id == Model.User.RoleId)>
                            @element.Name
                        </option>
                    }
                </select>
            </div>
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Сохранить изменения</button>
            <a asp-area="Admin" asp-controller="User" asp-action="Index">Отмена</a>
        </div>
    </form>
</div>
