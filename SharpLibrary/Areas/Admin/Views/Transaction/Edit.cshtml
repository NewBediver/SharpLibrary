@model TransactionViewModel

@{ 
    if (Model.Transaction.Id == 0)
    {
        ViewBag.Title = $"Добавление новой транзакции";
    }
    else
    {
        ViewBag.Title = $"Редактирование транзакции \"{Model.Transaction.Id}\"";
    }
}

<div class="container-fluid mb-3 mt-3">
    <form asp-area="Admin" asp-controller="Transaction" asp-action="Edit" method="post">
        <input type="hidden" asp-for="@Model.Transaction.Id" />
        <div class="form-group row">
            <label asp-for="@Model.Transaction.StartDate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div>
                    <span asp-validation-for="@Model.Transaction.StartDate" class="text-danger"></span>
                </div>
                <input asp-for="@Model.Transaction.StartDate" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.Transaction.EndDate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div>
                    <span asp-validation-for="@Model.Transaction.EndDate" class="text-danger"></span>
                </div>
                <input asp-for="@Model.Transaction.EndDate" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.Transaction.Description" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div>
                    <span asp-validation-for="@Model.Transaction.Description" class="text-danger"></span>
                </div>
                <input asp-for="@Model.Transaction.Description" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for=@Model.Transaction.TransactionTypeId class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div>
                    <span asp-validation-for=@Model.Transaction.TransactionTypeId class="text-danger"></span>
                </div>
                <select asp-for=@Model.Transaction.TransactionTypeId class="form-control">
                    @foreach (var element in Model.Types)
                    {
                        <option value=@element.Id selected=@(element.Id == Model.Transaction.TransactionTypeId)>
                            @element.Name
                        </option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for=@Model.Transaction.SubscriptionId class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div>
                    <span asp-validation-for=@Model.Transaction.SubscriptionId class="text-danger"></span>
                </div>
                <select asp-for=@Model.Transaction.SubscriptionId class="form-control">
                    @foreach (var element in Model.Subscriptions)
                    {
                        <option value=@element.Id selected=@(element.Id == Model.Transaction.SubscriptionId)>
                            @element.Id (@element.User.Surname @element.User.Name @element.User.Patronymic )
                        </option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for=@Model.Transaction.TransactionLiteratures class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select multiple name="selectedLiteratures" class="form-control">
                    @foreach (var element in Model.Literatures.Where(elm => elm.StatusId == 1))
                    {
                        <option value=@element.Id selected=@(Model.Transaction.TransactionLiteratures.FirstOrDefault(elm => elm.LiteratureId == element.Id) != null)>
                            @element.Name
                        </option>
                    }
                </select>
            </div>
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Сохранить изменения</button>
            <a asp-area="Admin" asp-controller="Transaction" asp-action="Index">Отмена</a>
        </div>
    </form>
</div>
