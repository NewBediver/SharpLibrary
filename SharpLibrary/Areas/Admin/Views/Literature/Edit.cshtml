@model LiteratureViewModel

@{ 
    if (Model.Literature.Id == 0)
    {
        ViewBag.Title = $"Добавление новой литературы";
    }
    else
    {
        ViewBag.Title = $"Редактирование литературы \"{Model.Literature.Name}\"";
    }
}

<div class="container-fluid mb-3 mt-3">
    <form asp-area="Admin" asp-controller="Literature" asp-action="Edit" method="post">
        <input type="hidden" asp-for=@Model.Literature.Id />
        <div class="form-group row">
            <label asp-for=@Model.Literature.InventoryNumber class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div>
                    <span asp-validation-for=@Model.Literature.InventoryNumber class="text-danger"></span>
                </div>
                <input asp-for=@Model.Literature.InventoryNumber class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for=@Model.Literature.Name class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div>
                    <span asp-validation-for=@Model.Literature.Name class="text-danger"></span>
                </div>
                <input asp-for=@Model.Literature.Name class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for=@Model.Literature.Date class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div>
                    <span asp-validation-for=@Model.Literature.Date class="text-danger"></span>
                </div>
                <input asp-for=@Model.Literature.Date class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for=@Model.Literature.Pages class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div>
                    <span asp-validation-for=@Model.Literature.Pages class="text-danger"></span>
                </div>
                <input asp-for=@Model.Literature.Pages class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for=@Model.Literature.ShortDescription class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div>
                    <span asp-validation-for=@Model.Literature.ShortDescription class="text-danger"></span>
                </div>
                <input asp-for=@Model.Literature.ShortDescription class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for=@Model.Literature.LongDescription class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div>
                    <span asp-validation-for=@Model.Literature.LongDescription class="text-danger"></span>
                </div>
                <input asp-for=@Model.Literature.LongDescription class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for=@Model.Literature.ReceiptDate class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div>
                    <span asp-validation-for=@Model.Literature.ReceiptDate class="text-danger"></span>
                </div>
                <input asp-for=@Model.Literature.ReceiptDate class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for=@Model.Literature.DebitDate class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div>
                    <span asp-validation-for=@Model.Literature.DebitDate class="text-danger"></span>
                </div>
                <input asp-for=@Model.Literature.DebitDate class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for=@Model.Literature.LiteratureTypeId class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div>
                    <span asp-validation-for=@Model.Literature.LiteratureTypeId class="text-danger"></span>
                </div>
                <select asp-for=@Model.Literature.LiteratureTypeId class="form-control">
                    @foreach (var element in Model.Types)
                    {
                        <option value=@element.Id selected=@(element.Id == (Model.Literature?.LiteratureTypeId ?? 0))>
                            @element.Name
                        </option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for=@Model.Literature.StatusId class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div>
                    <span asp-validation-for=@Model.Literature.StatusId class="text-danger"></span>
                </div>
                <select asp-for=@Model.Literature.StatusId class="form-control">
                    @foreach (var element in Model.Statuses)
                    {
                        <option value=@element.Id selected=@(element.Id == (Model.Literature?.StatusId ?? 0))>
                            @element.Name
                        </option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for=@Model.Literature.ShelfId class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div>
                    <span asp-validation-for=@Model.Literature.ShelfId class="text-danger"></span>
                </div>
                <select asp-for=@Model.Literature.ShelfId class="form-control">
                    @foreach (var element in Model.Shelves)
                    {
                        <option value=@element.Id selected=@(element.Id == (Model.Literature?.ShelfId ?? 0))>
                            @element.Number -> Стеллаж: @element.Rack.Number -> Библиотека: @element.Rack.Library.Name
                        </option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for=@Model.Authors class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select multiple name="selectedAuthors" class="form-control">
                    @foreach (var element in Model.Authors)
                    {
                        @if (Model.Literature.AuthorLiteratures.FirstOrDefault(elm => elm.AuthorId == element.Id) != null)
                        {
                            <option value=@element.Id selected>
                                @element.Surname @element.Name @element.Patronymic
                            </option>
                        }
                        else
                        {
                            <option value=@element.Id>
                                @element.Surname @element.Name @element.Patronymic
                            </option>
                        }
                    }
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for=@Model.Genres class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select multiple name="selectedGenres" class="form-control">
                    @foreach (var element in Model.Genres)
                    {
                        @if (Model.Literature.GenreLiteratures.FirstOrDefault(elm => elm.GenreId == element.Id) != null)
                        {
                            <option value=@element.Id selected>
                                @element.Name
                            </option>
                        }
                        else
                        {
                            <option value=@element.Id>
                                @element.Name
                            </option>
                        }
                    }
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for=@Model.Publishings class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select multiple name="selectedPublishings" class="form-control">
                    @foreach (var element in Model.Publishings)
                    {
                        @if (Model.Literature.PublishingLiteratures.FirstOrDefault(elm => elm.PublishingId == element.Id) != null)
                        {
                            <option value=@element.Id selected>
                                @element.Name
                            </option>
                        }
                        else
                        {
                            <option value=@element.Id>
                                @element.Name
                            </option>
                        }
                    }
                </select>
            </div>
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Сохранить изменения</button>
            <a asp-area="Admin" asp-controller="Literature" asp-action="Index">Отмена</a>
        </div>
    </form>
</div>
