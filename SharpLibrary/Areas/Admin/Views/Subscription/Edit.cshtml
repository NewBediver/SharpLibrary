@model SubscriptionViewModel

@{ 
    if (Model.Subscription.Id == 0)
    {
        ViewBag.Title = $"Добавление нового читательского абонемента";
    }
    else
    {
        ViewBag.Title = $"Редактирование читательского абонемента \"{Model.Subscription.Id}\"";
    }
}

<div class="container-fluid mb-3 mt-3">
    <form asp-area="Admin" asp-controller="Subscription" asp-action="Edit" method="post">
        <input type="hidden" asp-for=@Model.Subscription.Id />
        <div class="form-group row">
            <label asp-for=@Model.Subscription.DateOfStart class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div>
                    <span asp-validation-for=@Model.Subscription.DateOfStart class="text-danger"></span>
                </div>
                <input asp-for=@Model.Subscription.DateOfStart class="datepicker form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for=@Model.Subscription.SubscriptionTypeId class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div>
                    <span asp-validation-for=@Model.Subscription.SubscriptionTypeId class="text-danger"></span>
                </div>
                <select asp-for=@Model.Subscription.SubscriptionTypeId class="form-control">
                    @foreach (var element in Model.Types)
                    {
                        <option value=@element.Id  selected=@(element.Id == (Model.Subscription?.SubscriptionTypeId ?? 0))>
                            @element.Name
                        </option>
                    }
                </select>
            </div>
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Сохранить изменения</button>
            <a asp-area="Admin" asp-controller="Subscription" asp-action="Index">Отмена</a>
        </div>
    </form>
</div>

<script>
    $(function () {
        $('.datepicker').datepicker({
            clearBtn: true,
            format: "dd/mm/yyyy"
        });
    });
</script>